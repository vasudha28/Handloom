# Razorpay Configuration
# Get these from https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_test_your_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here

# MongoDB Configuration
# Get this from https://cloud.mongodb.com/ or use local MongoDB
MONGODB_URI=mongodb://localhost:27017/handloom-portal
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/handloom-portal

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:8080,http://localhost:3000,https://your-frontend-domain.vercel.app
